<Page xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
      xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
      xmlns:compras="clr-namespace:SistemaOro.Forms.ViewModels.Compras"
      xmlns:Entities="clr-namespace:SistemaOro.Data.Entities;assembly=SistemaOro.Data"
      xmlns:dto="clr-namespace:SistemaOro.Data.Dto;assembly=SistemaOro.Data"
      x:Class="SistemaOro.Forms.Views.Compras.ComprasPage"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{Binding Title}" Loaded="Page_Loaded">
    <Page.DataContext>
        <compras:ComprasViewModel />
    </Page.DataContext>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <dxg:GridControl x:Name="grid" Grid.Row="1"
                         SelectedItem="{Binding SelectedCompra}"
                         SelectionMode="Row">
            <dxg:GridControl.TotalSummary>
                <dxg:GridSummaryItem Alignment="Right" SummaryType="Count" />
            </dxg:GridControl.TotalSummary>
            <dxg:GridControl.InputBindings>
                <KeyBinding Command="{Binding View.Commands.DeleteFocusedRow, ElementName=grid}" Key="Delete" />
            </dxg:GridControl.InputBindings>
            <dxg:GridControl.ItemsSource>
                <dx:InfiniteAsyncSource Name="Source"
                                        ElementType="{x:Type Entities:ComprasCliente}"
                                        KeyProperty="Numcompra"
                                        FetchRowsCommand="{Binding FetchRowsCommand}"
                                        GetTotalSummariesCommand="{Binding GetTotalSummaries1Command}" />
            </dxg:GridControl.ItemsSource>

            <dxg:GridControl.View>
                <dxg:TableView AllowEditing="False"
                               ShowFixedTotalSummary="True"
                               TotalSummaryPosition="Bottom"
                               SearchStringToFilterCriteria="OnSearchStringToFilterCriteria"
                               ShowSearchPanelMode="Always">
                    <dxg:TableView.RowCellMenuCustomizations>
                        <dxb:BarButtonItem x:Name="EditarCompraItem" Content="Editar"
                                           Glyph="{dx:DXImage SvgImages/Icon Builder/Actions_Edit.svg}"
                                           ItemClick="EditarCompraItem_OnItemClick" />
                        <dxb:BarButtonItem ItemClick="BarItem_OnItemClick" Content="Imprimir"
                                           Glyph="{dx:DXImage SvgImages/Dashboards/Print.svg}" />
                        <dxb:BarButtonItem x:Name="ImprimirTicket" Content="Imprimir Ticket"
                                           Glyph="{dx:DXImage SvgImages/Dashboards/Print.svg}"
                                           ItemClick="ImprimirTicket_ItemClick" />
                        <dxb:BarButtonItem x:Name="DeleteCompraItem" Content="Delete"
                                           Glyph="{dx:DXImage SvgImages/HybridDemoIcons/BottomPanel/HybridDemo_Delete.svg}" />
                    </dxg:TableView.RowCellMenuCustomizations>
                </dxg:TableView>

            </dxg:GridControl.View>
            <dxg:GridColumn FieldName="Numcompra" IsSmart="True" ReadOnly="True" Width="*" AllowSorting="True" />
            <dxg:GridColumn FieldName="Codcliente" IsSmart="True" ReadOnly="True" Width="*" AllowSorting="True" />
            <dxg:GridColumn FieldName="NombreCliente" IsSmart="True" ReadOnly="True" Width="*" />
            <dxg:GridColumn FieldName="Total" IsSmart="True" ReadOnly="True" Width="*" />
            <dxg:GridColumn FieldName="Peso" IsSmart="True" ReadOnly="True" Width="*" />
            <dxg:GridColumn FieldName="Fecha" IsSmart="True" ReadOnly="True" Width="*" />
            <dxg:GridColumn FieldName="Nocontrato" IsSmart="True" ReadOnly="True" Width="*" />
        </dxg:GridControl>

    </Grid>
</Page>