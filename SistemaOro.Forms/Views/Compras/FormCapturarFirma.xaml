<Window xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        x:Class="SistemaOro.Forms.ViewModels.Compras.FormCapturarFirma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaOro.Forms.ViewModels.Compras"
        xmlns:topaz="clr-namespace:Topaz;assembly=SigPlusNET"
        mc:Ignorable="d" Closing="Window_Closing"
        Title="Captura de Firma" Height="300" Width="518" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dx:DXBorder BorderBrush="Black"
                     BorderThickness="1" 
                     Margin="10"
                     CornerRadius="5">
           <WindowsFormsHost Grid.Row="0" >
               <topaz:SigPlusNET x:Name="SigPlusNet" />
           </WindowsFormsHost>
        </dx:DXBorder>
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,5">
            <dx:SimpleButton Height="23" Width="75" Name="btnFirmar" 
                             Click="FuncionFirmar_Click" 
                             Content="Firmar" 
                             Glyph="{dx:DXImage SvgImages/RichEdit/PenColor.svg}" />
            <dx:SimpleButton Height="23" Width="86" 
                             Name="cmdClear" 
                             Click="cmdClear_Click" 
                             Content="Limpiar"
                             Margin="20,0,0,0" 
                             Glyph="{dx:DXImage SvgImages/Icon Builder/Actions_Refresh.svg}" />
            <dx:SimpleButton Height="23" Width="125" 
                             Name="cmdSigString"
                             Click="cmdSigString_Click"
                             Content="Obtener Firma"
                             Margin="20,0,0,0"
                             Glyph="{dx:DXImage SvgImages/Business Objects/BO_Validation.svg}" />
        </StackPanel>
    </Grid>
</Window>