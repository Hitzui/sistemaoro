<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SistemaOro.Forms.Views.Compras"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:compras="clr-namespace:SistemaOro.Forms.ViewModels.Compras"
    x:Class="SistemaOro.Forms.Views.Compras.FormReportesCompras"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    Title="FormReportesCompras">
    <Page.DataContext>
        <compras:ReporteComprasViewModel />
    </Page.DataContext>
    <Grid>

        <dx:DXTabControl>
            <dx:DXTabItem Header="Compras">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <dxlc:GroupBox Grid.Column="0"
                                   Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" 
                                        Orientation="Horizontal"
                                        Height="50">
                                <Label Content="Fecha desde:" HorizontalAlignment="Left"
                                       VerticalAlignment="Top" Width="70" Margin="0,0,15,0" />
                                <dxe:DateEdit HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              EditValue="{Binding FechaDesde}"
                                              Width="139" />
                            </StackPanel>
                            <StackPanel Grid.Row="1" 
                                        Orientation="Horizontal">
                                <Label Content="Fecha hasta:" HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" Width="70" Margin="0,0,15,0" />
                                <dxe:DateEdit HorizontalAlignment="Left" VerticalAlignment="Top"
                                              Width="139" EditValue="{Binding FechaHasta}" />
                            </StackPanel>
                            <StackPanel Grid.Row="2">
                                <dx:SimpleButton Content="Buscar Cliente" 
                                                 GlyphHeight="24"
                                                 Glyph="{dx:DXImage SvgImages/HybridDemoIcons/Editors/HybridDemo_Search Button.svg}" 
                                                 Margin="0,0,0,10"
                                                 Command="{Binding BuscarClienteCommand}"/>
                                <dx:SimpleButton Content="Ver Reporte"
                                                 Glyph="{dx:DXImage SvgImages/Print/Print.svg}"
                                                 Command="{Binding VerReporteCommand}"
                                                 GlyphHeight="24" 
                                                 Margin="0,0,0,10" />
                            </StackPanel>
                        </Grid>
                    </dxlc:GroupBox>
                    <dxlc:GroupBox Grid.Column="1"
                                   Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <dxe:ListBoxEdit
                                             SelectedIndex="{Binding SelectedValueIndex}">
                                <dxe:ListBoxEdit.StyleSettings>
                                    <dxe:RadioListBoxEditStyleSettings />
                                </dxe:ListBoxEdit.StyleSettings>
                                <dxe:ListBoxEditItem Margin="0,0,0,5">General onzas</dxe:ListBoxEditItem>
                                <dxe:ListBoxEditItem Margin="0,0,0,5">Por Cliente</dxe:ListBoxEditItem>
                            </dxe:ListBoxEdit>
                            
                        </Grid>
                    </dxlc:GroupBox>
                </Grid>
            </dx:DXTabItem>
        </dx:DXTabControl>

    </Grid>
</Page>