<Window x:Class="SistemaOro.Forms.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaOro.Forms.Views"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="150" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#80000000">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="30" Margin="10" Width="313"/>
        </StackPanel>
    </Grid>
</Window>
